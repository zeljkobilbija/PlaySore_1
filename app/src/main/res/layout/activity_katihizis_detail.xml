<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBraon"
    tools:context="com.interfacemockup.kalendar.KatihizisDetail">


    <com.google.android.gms.ads.AdView
        android:id="@+id/id_kat_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-7920431183682527/3087196483"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.333">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/id_kat_odovor_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:scrollbarThumbVertical="@color/colorOrange"
        android:scrollbars="vertical"
        android:text="@string/textview_odgovor"
        android:textAlignment="textStart"
        android:textColor="@color/colorBanana"
        android:textSize="20sp"
        android:fontFamily="@font_d/mirosln"
        app:layout_constraintBottom_toTopOf="@id/id_kat_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
