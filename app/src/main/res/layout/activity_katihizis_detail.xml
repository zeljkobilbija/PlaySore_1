<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBraon"
    tools:context="com.interfacemockup.kalendar.KatihizisDetail">

    <ImageView
        android:id="@+id/id_back_kat_detail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:background="@drawable/back_btn"
        android:backgroundTint="@color/colorBanana"
        android:src="@drawable/ic_arrow_back_48px"
        android:contentDescription="@string/back_btn_info_activity"
        android:onClick="vrati_na_main"/>




    <com.google.android.gms.ads.AdView
        android:id="@+id/id_kat_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-7920431183682527/3087196483"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.333">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/id_kat_odovor_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorSiviText"
        android:textStyle="italic"
        android:textAlignment="textStart"
        android:text="@string/textview_odgovor"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/colorOrange"
        app:layout_constraintBottom_toTopOf="@+id/id_kat_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_back_kat_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>
