<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_simple"
    tools:context="com.interfacemockup.kalendar.ObicajiDetail">

    <TextView
        android:id="@+id/id_naslov_obicaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/mirosln"
        android:gravity="center"
        android:text="@string/obicaj"
        android:textAlignment="center"
        android:textColor="@color/colorSiviText"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_obicaj_text_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/mirosln"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="@string/obicaj_detalj"
        android:textAlignment="gravity"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/colorOrange"
        android:textColor="@color/colorBanana"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/id_obicaji_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_naslov_obicaja"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/id_obicaji_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7920431183682527/2760694122"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.333">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>
