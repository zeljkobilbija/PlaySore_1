<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hwads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_simple"
    tools:context="com.interfacemockup.kalendar.ObicajiDetail">

    <TextView
        android:id="@+id/id_naslov_obicaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/mirosln"
        android:gravity="center"
        android:text="@string/obicaj"
        android:textAlignment="center"
        android:textColor="@color/colorSiviText"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_obicaj_text_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/mirosln"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:scrollbarThumbVertical="@color/colorIkona"
        android:scrollbars="vertical"
        android:text="@string/obicaj_detalj"
        android:textAlignment="gravity"
        android:textColor="@color/colorIkona"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hw_obicaji_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_naslov_obicaja" />

    <com.huawei.hms.ads.banner.BannerView
        android:id="@+id/hw_obicaji_banner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        hwads:adId="o6tug9iy1u"
        hwads:bannerSize="BANNER_SIZE_320_50"
        tools:layout_editor_absoluteX="-8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
