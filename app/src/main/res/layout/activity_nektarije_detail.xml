<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hwads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_simple"
    tools:context="com.interfacemockup.kalendar.MoltvaDetail">

    <TextView
        android:id="@+id/naslov_nektarije"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="molitva"
        android:fontFamily="@font/mirosln"
        android:textAlignment="center"
        android:textSize="28sp"
        android:padding="10dp"
        android:textColor="@color/colorSiviText"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/id_text_nektarijev"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/mirosln"
        android:padding="10dp"
        android:scrollbarThumbVertical="@color/colorIkona"
        android:scrollbars="vertical"
        android:text="@string/ime_svetitelja"
        android:textAlignment="textStart"
        android:textColor="@color/colorIkona"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hw_nektarije_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naslov_nektarije" />

    <com.huawei.hms.ads.banner.BannerView
        android:id="@+id/hw_nektarije_banner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        hwads:adId="l5zqgfqp4y"
        hwads:bannerSize="BANNER_SIZE_320_50"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>