<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:background="@drawable/linear">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_ikona_molitve"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/ikona_za_molitvu"
        android:src="@drawable/nikabeli"
        app:civ_border_color="@color/colorSiviText"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/id_moltva_cell_textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/actor"
        android:gravity="center"
        android:padding="10dp"
        android:text="Medium Text molitva"
        android:textAlignment="center"
        android:textColor="@color/colorSiviText"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_ikona_molitve"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>