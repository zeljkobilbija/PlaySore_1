<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBraon"
    tools:context="com.interfacemockup.kalendar.KatihizisDva">
    <ImageView
        android:id="@+id/id_back_kat_dva"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:background="@drawable/back_btn"
        android:backgroundTint="@color/colorBanana"
        android:src="@drawable/ic_arrow_back_48px"
        android:contentDescription="@string/back_btn_info_activity"
        android:onClick="nazad_na_main"/>

    <ListView
        android:id="@+id/id_katihizis_pitanja"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="4dp"
        app:layout_constraintTop_toBottomOf="@+id/id_back_kat_dva"
        android:layout_marginTop="56dp"
        android:scrollbars="vertical"
        android:layout_marginLeft="8dp"
        android:scrollbarThumbVertical="@color/colorOrange"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ListView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/katihizis"
        android:textAlignment="center"
        android:textColor="@color/colorSiviText"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/id_katihizis_pitanja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_back_kat_dva"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
